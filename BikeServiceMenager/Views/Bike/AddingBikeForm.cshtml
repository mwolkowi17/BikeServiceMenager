<h1>Bike List</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Find Client</h5>
                    <form asp-action="FindClient" autocomplete="off">
                        <div class="form-group">
                            <label for="name">Surname</label>
                            <input type="text" class="form-control" name="ownersurname" aria-describedby="">

                        </div>
                        <button type="submit" class="btn btn-primary">Find</button>
                    </form>
                </div>
            </div>
               

            </div>
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Bike</h5>
                        <h6 class="card-subtitle mb-2 text-muted">New Bike Registration in service</h6>
                        <form asp-action="AddBike" autocomplete="off">
                            <div class="form-group">
                                <label for="name">Owner Name</label>
                                <input type="text" class="form-control" name="ownername" aria-describedby="emailHelp">

                            </div>
                            <div class="form-group">
                                <label for="surname">Owner Surname</label>
                                <input type="text" class="form-control" name="ownersurname">
                            </div>
                            <div class="form-group">
                                <label for="brand">Bike Brand</label>
                                <input type="text" class="form-control" name="bikebrand">
                            </div>
                            <div class="form-group">
                                <label for="model">Model</label>
                                <input type="text" class="form-control" name="bikemodel">
                            </div>
                            <div class="form-group">
                                <label for="productionyear">Production Year</label>
                                <input type="text" class="form-control" name="productionyear">
                            </div>


                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
