@{
    ViewData["Title"] = "Add Order Form";
}
<h1>Add Order Form</h1>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Service Actions</h5>
                   
                </div>
            </div>


        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add New Order</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Please fill the form</h6>
                    <form asp-action="AddOrder" autocomplete="off">
                        <div class="form-group">
                            <label for="name">Bike Id number</label>
                            <input type="text" class="form-control" name="bikeid" aria-describedby="emailHelp">

                        </div>
                        <div class="form-group">
                            <label for="surname">Service Action number</label>
                            <input type="text" class="form-control" name="serviceactionid1">
                        </div>
                        <div class="form-group">
                            <label for="surname">Service Action number</label>
                            <input type="text" class="form-control" name="serviceactionid2">
                        </div>
                        <div class="form-group">
                            <label for="surname">Service Action number</label>
                            <input type="text" class="form-control" name="serviceactionid3">
                        </div>
                        <div class="form-group">
                            <label for="surname">Service Action number</label>
                            <input type="text" class="form-control" name="serviceactionid4">
                        </div>
                        <div class="form-group">
                            <label for="surname">Service Action number</label>
                            <input type="text" class="form-control" name="serviceactionid5">
                        </div>
                        <div class="form-group">
                            <label for="brand">Aditional Notes abuot order</label>
                            
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="additionalinfo"></textarea>
                        </div>
                        


                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>